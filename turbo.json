{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "passThroughEnv": [
                "PAYLOAD_SECRET",
                "MEDUSA_API_KEY",
                "CRON_SECRET",
                "DATABASE_URI",
                "BLOB_READ_WRITE_TOKEN"
            ],
            "env": ["MEDUSA_BACKEND_URL"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "format:fix": {
            "cache": false
        },
        "format:check": {
            "dependsOn": ["^format:check"],
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
