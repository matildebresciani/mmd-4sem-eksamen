# Database connection string
DATABASE_URI=mongodb://127.0.0.1:27017/?directConnection=true&serverSelectionTimeoutMS=2000

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# API key for MedusaJS integration
MEDUSA_API_KEY=MEDUSA_API_KEY

# Medusa Backend URL
MEDUSA_BACKEND_URL=https://b2b-demo.medusajs.app

# Vercel Blob Write Token
BLOB_READ_WRITE_TOKEN=YOUR_VERCEL_BLOB_READ_WRITE_TOKEN

# For resetting forgotten passwords
RESEND_API_KEY=YOUR_RESEND_API_KEY